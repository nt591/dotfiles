#!/usr/bin/env bash

###

# -- script to set update all external dependencies for neovim


brew update
brew upgrade neovim
brew upgrade yarn


# Ruby dependencies {{{

gem update neovim

# }}}


# Python dependencies {{{

# Python 3
pip3 install --upgrade pip
pip3 install neovim

# System Python
pip install --upgrade pip
pip install neovim

# }}}


# Nodejs dependencies {{{

yarn global add neovim@latest

# }}}


# neovim itself {{{

nvim +PlugInstall +UpdateRemotePlugins +qa

# }}}
