#!/bin/bash

###

# -- script to set colors generated by wal
# https://github.com/dylanaraps/pywal

# import colors from wal
source "$HOME/.cache/wal/colors.sh"

reload_dunst() {
  pkill dunst
  dunst \
    -lb "${color3}" \
    -nb "${color2}" \
    -cb "${color1}" \
    -lf "${color0}" \
    -bf "${color0}" \
    -cf "${color0}" \
    -nf "${color0}" \
    -fn "Gohu GohuFont 9" \
    -geometry "300x30-50+50" &
}

reload_bar() {
  pkill bar
  bar 2>/dev/null &
}

main() {
  reload_dunst &
  reload_bar &
}

main
